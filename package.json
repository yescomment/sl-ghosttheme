{
    "name": "sludgeline",
    "description": "A Ghost theme for Sludge",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "docs": "https://github.com/yescomment/sl-sludgeline",
    "config": {
        "posts_per_page": 7,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "navigation_layout": {
                "type": "select",
                "options": [
                    "Logo on the left",
                    "Logo in the middle",
                    "Stacked"
                ],
                "default": "Stacked"
            },
            "header_style": {
                "type": "select",
                "options": [
                    "Light",
                    "Accent color",
                    "Dark"
                ],
                "default": "Light"
            },
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Elegant serif"
            },
            "white_publication_logo_for_transparent_header": {
                "type": "image"
            },
            "email_signup_text": {
                "type": "text",
                "default": "Don't miss out on the latest news. Sign up now to get access to the library of members-only articles."
            },
            "cta_free_title": {
                "type": "text",
                "default": "Get this full story for free",
                "description": "Shown below free preview of free but members-only posts & pages"
            },
            "cta_free_lede": {
                "type": "text",
                "default": "Subscribers get our new stories over email the moment theyâ€™re published.",
                "description": "Body text of emailwall for members-only articles, just above signup/login buttons"
            },
            "cta_paid_title": {
                "type": "text",
                "default": "Read this full post with a subscription to Sludge",
                "description": "Shown below free preview of paid-only posts & pages"
            },
            "cta_paid_lede": {
                "type": "text",
                "default": "Paying members sustain our ad-free independent journalism.",
                "description": "Body text of paywall for paid-only articles, just above signup/login buttons"
            },
            "footer_text": {
                "type": "text"
            },
            "enter_tag_slugs_for_primary_sections": {
                "type": "text",
                "group": "homepage"
            },
            "enter_tag_slugs_for_secondary_sections": {
                "type": "text",
                "group": "homepage"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.4.2",
        "autoprefixer": "10.4.16",
        "beeper": "2.1.0",
        "cssnano": "6.0.1",
        "gscan": "4.39.4",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "postcss": "8.4.31",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0"
    }
}
