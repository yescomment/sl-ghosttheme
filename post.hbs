{{!< default}}

<main class="gh-main">
    {{#post}}
        <article class="gh-article {{post_class}}">

            <header class="gh-article-header gh-canvas">
                <h1 class="gh-article-title">{{title}}</h1>

                {{> "post-meta"}}

                {{#if custom_excerpt}}
                    <p class="gh-article-excerpt">{{custom_excerpt}}</p>
                {{/if}}

                {{> "feature-image"}}
            </header>

            <section class="gh-content gh-canvas">
                {{content}}
            </section>

            <footer class="gh-read-next gh-canvas">
                <section class="gh-pagehead">
                    <h4 class="gh-pagehead-title">Filed under</h4>
                </section>
                <nav class="gh-article-tags">
                    {{#foreach tags}}
                        <a class="gh-article-tag" href="{{url}}">{{name}}</a>
                    {{/foreach}}
                </nav>
            </footer>

        </article>
    {{/post}}

    {{> "related-posts"}}

    {{#post}}
        {{> "comments"}}
    {{/post}}
</main>